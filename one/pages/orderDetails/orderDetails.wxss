/* pages/orderDetails/orderDetails.wxss */
page {
  background: #f4f4f4;
  
}
.addressButton {
  font-size: 36rpx;
  color: #ccc;
  height: 150rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.addressButton text {
  color: #ab956d;
  padding-right: 10rpx;
}
/*===商品列表  */
.goods {
  background: #fff;
  margin-top: 30rpx;
}
.goods-info {
  display: flex;
  padding: 30rpx 50rpx 30rpx 30rpx;
  border-bottom: 1px solid #f4f4f4;
  color: #666;
  justify-content: space-between;
  font-size: 32rpx;
}
.info-left {
  display: flex;
}
.info-text {
  margin: 20rpx 30rpx;
}
.info-name {
  margin-bottom: 20rpx;
}
.goods-info .info-img {
  width: 200rpx;
  height: 200rpx;
  background: #f4f4f4;
  display: flex;
  justify-content: center;
  align-items: center;
}
.info-img image {
  width: 180rpx;
  height: 180rpx;
}
.payfor {
  position: fixed;
  width: 100%;
  bottom: 0;
  display: flex;
  font-size: 32rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.money {
  flex: 0.7;
  color: #a65755;
  background: #fff;
  text-indent: 1rem;
}
.go {
  flex: 0.3;
  color: #fff;
  background: #cdbfa7;
  text-align: center;
}
.address-info{
  background: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.user-address{
  display: flex;
  flex-direction: row;
}
.user-left{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.user-left>view{
  margin:10rpx 0;
}
.user-info{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.user-info>view{
  display: flex;
  align-items: center;
}
.user-info image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 15rpx;
}
.user-info text{
  color: #333;
}
.details{
  color: #999;
}
.arrow-icon{
  flex-basis: 150rpx;
  text-align: center;
}
.arrow-icon image{
  width: 50rpx;
  height: 50rpx;
  -webkit-transform: rotate(-90deg);
}
